<% include('../layouts/header.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="/adlogin.css">


<div class="wrapper">
      <div class="container main">
          <div class="row">
            
            <div class="col-md-12 right">

              

                  <form action="" method="post">

                    <h3>Admin Login</h3>
                        
                  <div class="input-box">
                      
                     <%
                     if(typeof message !== 'undefined'){
                         %>
                         <p class="text-danger"><%=message%></p>
                         <%
                     }
                     %>

                     
                     <div class="input-field">
                          <input type="email" class="input" name="email" id="email" required="" autocomplete="on" >
                          <label for="email">Email</label> 
                      </div> 
                     <div class="input-field">
                          <input type="password" class="input" name="password" id="pass" required="">
                          <label for="pass">Password</label>
                      </div> 
                     <div class="input-field">
                          
                          <input type="submit" class="submit" value="log in">
                     </div> 
                     <div class="signin">
                      <!-- <span><a href="/signin">sing in here</a></span> -->
                     </div>
                  </div>
            </form>  
              </div>
              
          </div>
      </div>
  </div>

