<% include('../layouts/header.ejs') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<style>

.body{
      width: 100%;
      height: 100%;
      background: rgb(14, 136, 120);
}

.home.m-5{
      border: none;
      height: 45px;
      width: 70px;
      border-radius: 5px;
      font-size: larger;
      text-decoration: none;
      color: black;
}
h1{
      text-align: center;
      font-family: Georgia, 'Times New Roman', Times, serif;
      
}

.card{
  margin: 3vh;
}
.row{
  margin-left: 50px;
  width:  1400px;
  height:550px;
  border-radius: 10px;
  background: #fff;
  padding: 0px;
  box-shadow: 5px 5px 10px 1px rgba(0,0,0,0.2);
  align-items: center;
  overflow: scroll;
  scrollbar-width: none;
  
  
}

.form{
      margin-left: 400px;
}



</style>

<section class="body">

      <h1>Dashboard</h1>

      

<a class="home m-5" href="/admin/home">HOME</a>

<a class="home m-5" href="/admin/new-user">Add New User</a>


<!-- dashboard.ejs -->
<form class="form" action="/admin/search" method="get">
      <input type="text" name="search" placeholder="Search users...">
      <button type="submit">Search</button>
    </form>
    
    



<div class="row d-flex mt-4">
 
      
            <%
if(users.length > 0){

      for(let i=0;i<users.length;i++){
            %>
      <div class="row-inner">
            <div class="col-6 col-md-3">
            <div class="card" style="width: 16rem;height: 14rem;">
                  <div class="card-body">
                    <h5 class="card-title"><%= users[i].name %></h5>
                    <h6 class="card-title">Email        :<%= users[i].email %></h6>
                    <h6 class="card-title">Phone Number :<%= users[i].mobile %></h6>
                    <a href="/admin/delete-user?id=<%= users[i]._id %>" class="card-link">DELETE</a>
                    <a href="/admin/edit-user?id=<%= users[i]._id %>" class="card-link">EDIT</a>
                  </div>
                </div>
            </div>
      </div>
              <%

      }
}
   else{
      %>
      <h6>User Not Found</h6>
      <%
   }
   %>

     

</div>

</section>


