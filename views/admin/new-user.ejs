<% include('../layouts/header.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="/styles.css">

<div class="wrapper">
      <div class="container main">
          <div class="row">
              <div class="col-md-6 side-image ">
                  <div class="text ">
                    <h2 class="text-success">EGMA-Education</h2>
                      <p>“Education is the most powerful weapon which you can use to change the world.”<br> <i> -Nelson Mandela</i></p>
                      
                  </div>
                  
              </div>
              <div class="col-md-6 right">
                  
                  <form action="" method="post" id="SignupForm">
                        
                  <div class="input-box">
                     
                     <header>Add New User</header>
                     <%
                     if(typeof message !== 'undefined'){
                         %>
                         <p class="text-success"><%=message%></p>
                         <%
                     }
                     %>
                     <div class="input-field">
                          <input type="text" class="input" name="name" id="" required="" autocomplete="on" >
                          <label for="name">Username</label> 
                      </div> 
                      <div class="input-field">
                          <input type="email" class="input" name="email" id="email" required="" autocomplete="on">
                          <label for="email">Email</label> 
                      </div>
                      <div class="input-field">
                          <input type="number" class="input" name="number" id="pass" required>
                          <label for="number">Phone Number</label>
                      </div>
                      <div class="input-field">
                        <input type="password" class="input" name="password" id="password" required>
                        <label for="number">Password</label>
                    </div>
                     <div class="input-field">
                          
                          <input type="submit" class="submit" value="Add User">
                     </div> 

                     <a class="p-5 mt-4" href="/admin/dashboard">Go Back</a>
                   
                  </div>



                  <div class="text-center mb-1">
                    <span id="invalid-email" class="text-danger" style="display: none;">Please enter a valid email</span>
                </div>
                
                <div class="text-center mb-1">
                    <span id="invalid-pass" class="text-danger" style="display: none;">password must contain minimum 10 characters</span>
                </div>
    
                <% if(locals.status == 'success') {%>
                <div class="text-center">
                    <span class="">Signed up Successfully. Click here to  </span>
                    <a class="link-success" href="/login">Login</a>
                </div>
                <% }else if (locals.status == 'failed'){ %>
                    <div class="text-center">
                        <span class="">Signup failed</span>
                    </div>
                <% }else if (locals.exist == 'true'){ %>
                    <div class="text-center">
                        <span class="">User already exists. Try </span>
                        <a class="link-success" href="/login">Login</a>
                    </div>
                <% } %>



            </form>  
              </div>
              
          </div>
      </div>
  </div>



<script src="/js/script.js"></script>

<% include('../layouts/footer.ejs')%>